---
import ScrollReveal from '../ui/ScrollReveal.astro';
import ParallaxImage from '../ui/ParallaxImage.astro';

const { lang } = Astro.props;

const content = {
  nl: {
    features: [
      {
        title: "Op 50 meter van de boulevard",
        desc: "Onze unieke ligging maakt ons bijzonder. Binnen enkele stappen staat u op de beroemde boulevard van Vlissingen, waar u kunt genieten van het uitzicht op de voorbijvarende zeeschepen en het strand.",
        img: "/images/vlissingen_beach_premium.jpg",
        stat: "50m lopen"
      },
      {
        title: "Comfort & Gemak",
        desc: "Fietsliefhebbers zijn van harte welkom; wij bieden een afgesloten binnenplaats voor uw fietsen. Daarnaast is er een algemene ruimte met koelkast, magnetron en koffiezetapparaat voor uw gemak.",
        img: "GARDEN_PLACEHOLDER",
        stat: "Fietsenstalling"
      },
      {
        title: "Familie & Gastvrijheid",
        desc: "Als familiepension hechten wij veel waarde aan persoonlijk contact en een gemoedelijke sfeer. Wij zorgen ervoor dat u zich direct thuis voelt in het centrum van Vlissingen.",
        img: "/images/boulevard.jpg",
        stat: "Centrum"
      }
    ]
  },
  en: {
    features: [
      {
        title: "50 meters from the boulevard",
        desc: "Our unique location makes us special. Within a few steps regarding the famous boulevard of Vlissingen, where you can enjoy the view of passing sea ships and the beach.",
        img: "/images/vlissingen_beach_premium.jpg",
        stat: "50m walk"
      },
      {
        title: "Comfort & Convenience",
        desc: "Cycling enthusiasts are welcome; we offer a locked courtyard for your bikes. Additionally, there is a common area with a fridge, microwave, and coffee maker for your convenience.",
        img: "GARDEN_PLACEHOLDER",
        stat: "Bike Storage"
      },
      {
        title: "Family & Hospitality",
        desc: "As a family pension, we value personal contact and a friendly atmosphere. We ensure that you feel right at home in the center of Vlissingen.",
        img: "/images/boulevard.jpg",
        stat: "City Center"
      }
    ]
  },
  de: {
    features: [
      {
        title: "50 Meter vom Boulevard",
        desc: "Unsere einzigartige Lage macht uns besonders. In wenigen Schritten sind Sie auf dem berühmten Boulevard von Vlissingen, wo Sie den Blick auf die vorbeifahrenden Seeschiffe und den Strand genießen können.",
        img: "/images/vlissingen_beach_premium.jpg",
        stat: "50m Gehweg"
      },
      {
        title: "Komfort & Bequemlichkeit",
        desc: "Radfahrer sind herzlich willkommen; wir bieten einen abgeschlossenen Innenhof für Ihre Fahrräder. Darüber hinaus gibt es einen allgemeinen Raum mit Kühlschrank, Mikrowelle und Kaffeemaschine für Ihren Komfort.",
        img: "GARDEN_PLACEHOLDER",
        stat: "Fahrradkeller"
      },
      {
        title: "Familie & Gastfreundschaft",
        desc: "Als Familienpension legen wir großen Wert auf persönlichen Kontakt und eine gemütliche Atmosphäre. Wir sorgen dafür, dass Sie sich im Zentrum von Vlissingen sofort wie zu Hause fühlen.",
        img: "/images/boulevard.jpg",
        stat: "Zentrum"
      }
    ]
  }
};

const t = content[lang] || content.nl;
---

<section class="py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {t.features.map((feature, index) => (
      <div class={`flex flex-col md:flex-row items-center gap-12 md:gap-24 mb-32 last:mb-0 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
        
        <!-- Image Side -->
        <div class="w-full md:w-1/2 relative group">
           <ScrollReveal animation={index % 2 === 0 ? 'slide-left' : 'slide-right'} duration={1.2}>
               <div class="relative overflow-hidden rounded-sm aspect-[4/3] md:aspect-[3/4] lg:aspect-[4/3]">
                  <ParallaxImage 
                    src={feature.img === 'GARDEN_PLACEHOLDER' ? '/images/tranquil-dunes.png' : feature.img} 
                    alt={feature.title} 
                    class="h-full w-full object-cover"
                  />
                  <!-- Stat Badge overlay -->
                  <div class="absolute top-6 left-6 bg-white/90 backdrop-blur-md px-4 py-2 text-sea-blue font-heading font-bold shadow-lg z-10 border border-white/20">
                    {feature.stat}
                  </div>
               </div>
           </ScrollReveal>
        </div>

        <!-- Text Side -->
        <div class="w-full md:w-1/2">
           <ScrollReveal animation="fade-up" delay={0.3}>
               <div class="w-16 h-[2px] bg-dune-sand mb-6"></div>
               <h3 class="text-3xl md:text-5xl font-heading font-light text-slate-900 mb-6 leading-tight">
                 {feature.title}
               </h3>
               <p class="text-lg text-slate-600 font-light leading-relaxed mb-8 max-w-lg">
                 {feature.desc}
               </p>
               <div class="flex items-center text-sm font-bold uppercase tracking-widest text-sea-blue group cursor-pointer">
                  <span class="border-b border-sea-blue pb-1">
                      {lang === 'nl' ? 'Ontdek meer' : lang === 'de' ? 'Mehr entdecken' : 'Discover more'}
                  </span>
               </div>
           </ScrollReveal>
        </div>

      </div>
    ))}

  </div>
</section>
